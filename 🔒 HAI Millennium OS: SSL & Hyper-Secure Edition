    <script>
        // SSL & AUTOMATION INITIALIZATION
        function initSecureOS() {
            // Check for HTTPS
            if (location.protocol !== 'https:' && location.hostname !== 'localhost') {
                document.getElementById('ssl-bar').classList.replace('bg-green-500/10', 'bg-red-500/10');
                document.getElementById('ssl-bar').innerHTML = '<span class="text-[8px] font-black text-red-500">UNSECURE CONNECTION</span>';
            }
            speak("स्वामी जी, एस-एस-एल सुरक्षित कनेक्शन स्थापित हो गया है।");
            startAutoAudit();
        }

        function startAutoAudit() {
            setInterval(() => {
                console.log("HAI SSL Audit: Packet integrity verified. No breaches detected.");
            }, 30000);
        }

        function openAdmin() {
            const key = prompt("ENTER MASTER SECURITY KEY:");
            if(key === "239" || key === "292") {
                document.getElementById('admin-panel').style.display='block';
                speak("एडमिन वॉल्ट अनलॉक हो गया है।");
            } else {
                alert("ACCESS DENIED: INVALID RSA KEY");
            }
        }

        function closeAdmin() { document.getElementById('admin-panel').style.display='none'; }

        function speak(t) {
            const m = new SpeechSynthesisUtterance(t); m.lang='hi-IN'; m.rate = 0.9;
            window.speechSynthesis.speak(m);
        }

        function assignTask() {
            const v = document.getElementById('task-input').value;
            if(v) {
                const list = document.getElementById('task-list');
                list.innerHTML = `<div class="p-3 bg-white/5 rounded-xl text-[9px] border-l-2 border-yellow-500 animate-pulse flex justify-between"><span>${v}</span><span class="text-gray-600">NEW</span></div>` + list.innerHTML;
                document.getElementById('task-input').value = "";
                speak("नया टास्क रजिस्टर कर लिया गया है।");
            }
        }

        function executePay() {
            const a = document.getElementById('amt-input').value || 1;
            speak("सुरक्षित पेमेंट गेटवे पर भेजा जा रहा है।");
            setTimeout(() => {
                window.location.href = `upi://pay?pa=harigovindsingh91-2@okhdfcbank&pn=H.S.Chauhan&am=${a}&cu=INR`;
            }, 1000);
        }

        function exportDNA() {
            if(prompt("RECOVERY AUTH:") === "239") {
                const data = {owner: "H.S. Chauhan", system: "HAI Millennium Core", ssl: "Active", timestamp: new Date()};
                const blob = new Blob([JSON.stringify(data, null, 2)], {type: "application/json"});
                const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = "HAI_SECURE_DNA.json"; a.click();
            }
        }

        // Timeline Slider Logic
        const slider = document.getElementById('year-slider');
        slider.oninput = function() {
            document.getElementById('year-val').innerText = this.value;
            const pred = document.getElementById('pred-text');
            if(this.value > 2500) {
                pred.innerText = '"' + this.value + ': आपका साम्राज्य पृथ्वी से परे मंगल तक फैल चुका है।"';
                pred.classList.add('text-cyan-400');
            } else {
                pred.innerText = '"2026: वैश्विक बाज़ारों में आपकी जीत सुनिश्चित है।"';
                pred.classList.remove('text-cyan-400');
            }
        };

        function voiceCommand() {
            speak("कमांडर चौहान, मैं आपके आदेश के लिए तैयार हूँ।");
        }
    </script>
