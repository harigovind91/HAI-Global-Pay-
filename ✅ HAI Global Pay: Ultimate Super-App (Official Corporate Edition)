    <script>
        function masterAccess() {
            const pin = prompt("ENTER MASTER KEY:");
            if (pin === "392") {
                new Audio('https://www.soundjay.com/buttons/sounds/button-37a.mp3').play();
                alert("üîì ACCESS GRANTED\nWELCOME CEO HARIGOVIND SINGH CHAUHAN");
                document.body.style.border = "5px solid #00f3ff";
            } else {
                alert("‚ùå ACCESS DENIED");
            }
        }

        // Movable Ad Script
        const ad = document.getElementById('movable-ad');
        let isDragging = false;
        ad.onmousedown = () => isDragging = true;
        document.onmousemove = (e) => {
            if(isDragging) {
                ad.style.left = (e.clientX - 80) + 'px';
                ad.style.top = (e.clientY - 45) + 'px';
            }
        }
        document.onmouseup = () => isDragging = false;
    </script>
