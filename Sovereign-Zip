import shutil
import os

def pack_sovereign_files():
    files_to_pack = [
        "273_Universal_Karma_Validator.gs",
        "273_HAI_Global_Backup_System.py",
        "HAI_Master_Controller.py"
    ]
    
    print("--- HAI Global Pay: Packaging Sovereign Files ---")
    
    # рдЪреЗрдХ рдХрд░рдирд╛ рдХрд┐ рдлрд╛рдЗрд▓реЗрдВ рдореМрдЬреВрдж рд╣реИрдВ рдпрд╛ рдирд╣реАрдВ
    for file in files_to_pack:
        if os.path.exists(file):
            print(f"ЁЯУж Adding {file} to secure vault...")
        else:
            print(f"тЪая╕П Warning: {file} not found!")

    # рдЬрд╝рд┐рдк рдлрд╛рдЗрд▓ рдмрдирд╛рдирд╛
    try:
        shutil.make_archive("HAI_Global_Pay_Sovereign_Pack", 'zip', '.')
        print("\nтЬЕ рд╕рдлрд▓рддрд╛: 'HAI_Global_Pay_Sovereign_Pack.zip' рддреИрдпрд╛рд░ рд╣реИред")
    except Exception as e:
        print(f"тЭМ рддреНрд░реБрдЯрд┐: {e}")

if __name__ == "__main__":
    pack_sovereign_files()

