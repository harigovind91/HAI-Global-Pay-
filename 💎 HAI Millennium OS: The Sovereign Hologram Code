        function openAdmin() {
            const k = prompt("SECURITY KEY (RSA-AUTH):");
            if(k === "239" || k === "292") {
                document.getElementById('admin-panel').style.display = 'block';
                logAccess();
            }
        }

        function closeAdmin() { document.getElementById('admin-panel').style.display = 'none'; }

        function speak(t) {
            const m = new SpeechSynthesisUtterance(t); m.lang='hi-IN'; m.rate = 0.85;
            window.speechSynthesis.speak(m);
        }

        function executePay() {
