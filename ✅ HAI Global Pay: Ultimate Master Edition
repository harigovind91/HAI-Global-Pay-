    <script>
        // ‡§Æ‡§æ‡§∏‡•ç‡§ü‡§∞ ‡§ï‡•Ä ‡§î‡§∞ ‡§∞‡§ø‡§ï‡§µ‡§∞‡•Ä ‡§ï‡•Ä - ‡§á‡§∏‡•á ‡§Ö‡§∏‡§≤‡•Ä ‡§™‡•ç‡§∞‡•ã‡§°‡§ï‡•ç‡§∂‡§® ‡§Æ‡•á‡§Ç .env ‡§∏‡•á ‡§≤‡•ã‡§° ‡§ï‡§ø‡§Ø‡§æ ‡§ú‡§æ‡§®‡§æ ‡§ö‡§æ‡§π‡§ø‡§è
        const CONFIG = {
            master: "HAI-Admin@786#X",
            recovery: "REC-392-Hari-2026"
        };

        function secureAdminAccess() {
            const entry = prompt("SECURITY CHALLENGE: ENTER ACCESS KEY");
            
            if (entry === CONFIG.master) {
                alert("üîì ACCESS GRANTED: WELCOME CEO HARIGOVIND");
                window.location.href = "#admin-dashboard"; // ‡§è‡§°‡§Æ‡§ø‡§® ‡§°‡•à‡§∂‡§¨‡•ã‡§∞‡•ç‡§° ‡§™‡§∞ ‡§≤‡•á ‡§ú‡§æ‡§è‡§Ç
            } else if (entry === CONFIG.recovery) {
                alert("‚ö†Ô∏è RECOVERY MODE: YOU CAN NOW RESET MASTER KEY");
                const newKey = prompt("ENTER NEW MASTER KEY:");
                if(newKey) {
                    CONFIG.master = newKey;
                    alert("‚úÖ MASTER KEY UPDATED");
                }
            } else {
                alert("‚ùå ACCESS DENIED: ALERT SENT TO SECURITY LOGS");
            }
        }

        function processPayment() {
            const amt = document.getElementById('amount').value;
            if(!amt || amt <= 0) {
                alert("Please enter a valid amount");
                return;
            }
            alert(`HAI Global Pay: Processing $${amt}... Please use Fingerprint to Confirm.`);
        }

        function voiceCommand() {
            alert("Listening... (Speak: 'Pay 500 to Harigovind')");
        }

        // Timer Script
        let timeLeft = 300;
        setInterval(() => {
            if(timeLeft <= 0) return;
            timeLeft--;
            const mins = Math.floor(timeLeft / 60);
            const secs = timeLeft % 60;
            document.getElementById('timer').innerText = `SESSION: ${mins}:${secs < 10 ? '0' : ''}${secs}`;
        }, 1000);
    </script>
